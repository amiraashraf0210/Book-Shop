@model ShoppingCart
@{
    ViewData["Title"] = "GetUserCart";
}

<div class="cart-container">
    @if (Model != null && Model.CartDetails != null && Model.CartDetails.Count > 0)
    {
        <h3 class="cart-title">My Shopping Cart</h3>

        <div class="cart-items">
            @foreach (var Item in Model.CartDetails)
            {
                <div class="cart-item">
                    <div class="book-image">
                        @if (string.IsNullOrEmpty(Item.Book.Image))
                        {
                            <img src="/images/NoImage.png" alt="@Item.Book.BookName" />
                        }
                        else
                        {
                            <img src="@Item.Book.Image" alt="@Item.Book.BookName" />
                        }
                    </div>
                    <div class="book-details">
                        <h4 class="book-title">@Item.Book.BookName</h4>
                        <p class="book-genre">@Item.Book.Genre.GenreName</p>
                        <div class="price-info">
                            <span class="unit-price">$@Item.Book.Price</span>
                            <span class="quantity">x @Item.Quantity</span>
                            <span class="total-price">$@(Item.Book.Price* Item.Quantity)</span>
                        </div>
                        <div class="quantity-controls">
                            @if (Item.Quantity < Item.Book.Stock.Quantity)
                            {
                                <a class="btn btn-increase" href="/Cart/AddItem?bookId=@Item.BookId&&redirect=1">
                                    <i class="bi bi-plus"></i>
                                </a>
                            }
                            else
                            {
                                <span class="out-of-stock">Out of stock</span>
                            }
                            <a class="btn btn-decrease" href="/Cart/removeitem?bookId=@Item.BookId">
                                <i class="bi bi-dash"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="cart-summary">
            <div class="total-amount">
                <h4>Total Amount:</h4>
                <span class="amount">$@(Model.CartDetails.Select(item => item.Book.Price * item.Quantity).Sum())</span>
            </div>
            <a class="btn btn-checkout" href="/Cart/Checkout">
                <i class="bi bi-credit-card"></i> Proceed to Checkout
            </a>
        </div>
    }
    else
    {
        <div class="empty-cart">
            <i class="bi bi-cart-x"></i>
            <h3>Your cart is empty</h3>
            <p>Add some books to your cart to see them here!</p>
            <a href="/Home/Index" class="btn btn-primary">Continue Shopping</a>
        </div>
    }
</div>

<style>
    .cart-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .cart-title {
        color: #000000;
        margin-bottom: 2rem;
        font-weight: 600;
    }

    .cart-items {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .cart-item {
        display: flex;
        background: #000000;
        border-radius: 12px;
        padding: 1.5rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease;
    }

    .cart-item:hover {
        transform: translateY(-2px);
    }

    .book-image {
        width: 120px;
        height: 180px;
        margin-right: 1.5rem;
        border-radius: 8px;
        overflow: hidden;
    }

    .book-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .book-details {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .book-title {
        font-size: 1.2rem;
        color: #000000;
        margin-bottom: 0.5rem;
    }

    .book-genre {
        color: #333333;
        font-size: 0.9rem;
        margin-bottom: 1rem;
    }

    .price-info {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .unit-price {
        color: #000000;
        font-weight: 500;
    }

    .quantity {
        color: #333333;
    }

    .total-price {
        color: #27ae60;
        font-weight: 600;
        font-size: 1.1rem;
    }

    .quantity-controls {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-increase,
    .btn-decrease {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #007bff;
        color: #000000;
        border: none;
        cursor: pointer;
        transition: background 0.2s ease;
    }

    .btn-increase:hover,
    .btn-decrease:hover {
        background: #0056b3;
        color: #d8d6d6;
    }

    .out-of-stock {
        color: #e74c3c;
        font-size: 0.9rem;
        padding: 0.5rem 1rem;
        border: 1px solid #e74c3c;
        border-radius: 4px;
    }

    .cart-summary {
        margin-top: 2rem;
        background: #000000;
        padding: 1.5rem;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .total-amount {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .total-amount h4 {
        margin: 0;
        color: #000000;
    }

    .amount {
        font-size: 1.5rem;
        font-weight: 600;
        color: #27ae60;
    }

    .btn-checkout {
        background: #28a745;
        color: #000000;
        padding: 0.8rem 1.5rem;
        border-radius: 8px;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: background 0.2s ease;
    }

    .btn-checkout:hover {
        background: #218838;
        color: #ffffff;
    }

    .empty-cart {
        text-align: center;
        padding: 3rem;
        background: #000000;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .empty-cart i {
        font-size: 4rem;
        color: #6c757d;
        margin-bottom: 1rem;
    }

    .empty-cart h3 {
        color: #000000;
        margin-bottom: 0.5rem;
    }

    .empty-cart p {
        color: #333333;
        margin-bottom: 1.5rem;
    }

    @media
    (max-width: 768px) {
        .cart-item {
            flex-direction: column;
        }

        .book-image {
            width: 100%;
            height: 200px;
            margin-right: 0;
            margin-bottom: 1rem;
        }

        .cart-summary {
            flex-direction: column;
            gap: 1rem;
            text-align: center;
        }
    }
</style>
